{
  "name": "hotel-ops-fullstack",
  "version": "1.0.0",
  "description": "Complete Hotel Operations Management System",
  "main": "server.js",
  "scripts": {
    "build": "cd frontend && npm run build",
    "start": "node server.js",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "postbuild": "echo 'Frontend built successfully'"
  },
  "keywords": [
    "hotel",
    "management",
    "operations"
  ],
  "author": "Hotel Operations Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "http-proxy-middleware": "^2.0.6"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}